<resources>
    <!-- Base application theme. -->
    <style name="Theme.IDCardInfoK" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">
            @color/purple_500
        </item>
        <item name="colorPrimaryVariant">
            @color/purple_700
        </item>
        <item name="colorOnPrimary">
            @color/white
        </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">
            @color/teal_200
        </item>
        <item name="colorSecondaryVariant">
            @color/teal_700
        </item>
        <item name="colorOnSecondary">
            @color/black
        </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">
            ?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppButton" parent="@style/Widget.Material3.Button">
        <!--        <item name="backgroundTint">@color/colorButton</item>-->
        <item name="elevation">
            10dp
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.Material3.TitleLarge
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:padding">
            10dp
        </item>
    </style>

    <style name="AppSubTitle" parent="@style/TextAppearance.Material3.DisplayLarge">
        <item name="android:textAlignment">
            center
        </item>
        <item name="android:padding">
            6dp
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>

    <style name="AppEditText" parent="@style/Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:inputType">
            number
        </item>
    </style>

    <style name="FragmentTextView" parent="@style/TextAppearance.Material3.TitleLarge">
        <!--        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>-->
        <!--        <item name="android:layout_margin">@dimen/margin_5dp</item>-->
        <!--        <item name="android:gravity">center</item>-->
        <item name="android:padding">
            @dimen/margin_5dp
        </item>
        <!--        <item name="android:textSize">@dimen/text_20sp</item>-->

    </style>

    <style name="FragmentTextView.Bold">
        <item name="android:textStyle">
            bold
        </item>
    </style>
</resources>